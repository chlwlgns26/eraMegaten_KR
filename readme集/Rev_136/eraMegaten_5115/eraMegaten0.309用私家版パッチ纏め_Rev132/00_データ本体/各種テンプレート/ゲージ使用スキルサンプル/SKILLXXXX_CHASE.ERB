;トリガー発動条件
;====================================================
@SKILL_TRIGGER_ACTIONABLE_XXXX,ARG,ARG:1
#DIM CHASE_T
;自分ならNG
SIF ARG == ARG:1
	RETURN 0
;チェイス効果が無いとNG
SIF SKILLGAGE_D_GET(ARG,XXXX) < 1
	RETURN 0
CHASE_T = SKILLGAGE_H_GET(ARG,XXXX)
;相手が死んでる、いないと
SIF CHASE_T < 0 || GET_STATE(CFLAG:CHASE_T:ステート) == "DYING"
	RETURN 0
;ダメージを受けてないとNG
SIF CFLAG:CHASE_T:現ダメージ < 1
	RETURN 0
;火炎、重力、核熱のいずれかを受けてないとNG
;受けフラグについては、CFLAG.CSV、RECEIVE_SETを参照
SIF !GETBIT(CFLAG:CHASE_T:受けフラグ,GET_TYPE_NUM("火炎")) && !GETBIT(CFLAG:CHASE_T:受けフラグ,GET_TYPE_NUM("重力")) && !GETBIT(CFLAG:CHASE_T:受けフラグ,GET_TYPE_NUM("核熱"))
	RETURN 0
;チェイス相手の位置をターゲットに
RESULT:1 = CPOS(CHASE_T)
RETURN 1

