;　相性
@SKILL_TYPE_XXXX,ARG
#LOCALSSIZE 5
#LOCALSIZE 4
SIF ARG < 0
	RETURN 0
SIF SKILLGAGE_D_GET(ARG,XXXX) < 1 || ARG == FLAG:行動順1
	RETURN ABL:ARG:攻撃相性
LOCAL = SKILLGAGE_H_GET(ARG,XXXX)
LOCAL:2 = -300
LOCALS = %GET_TYPE(ABL:ARG:攻撃相性)%
LOCALS:1 = %GETBIT(CFLAG:LOCAL:受けフラグ, 4) ? "火炎" # LOCALS%
LOCALS:2 = %GETBIT(CFLAG:LOCAL:受けフラグ,15) ? "重力" # LOCALS%
LOCALS:3 = %GETBIT(CFLAG:LOCAL:受けフラグ,16) ? "核熱" # LOCALS%
LOCALS:4 = %LOCALS%
SIF FLAG:DEBUG
	PRINTFORML %LOCALS%%LOCALS:1%%LOCALS:2%%LOCALS:3%%LOCALS:4%
FOR LOCAL:1, 1, 5
	;判定用に数値を仕舞う。反射は-200扱い
	LOCAL:3 = MAXBASE:LOCAL:(LOCALS:(LOCAL:1)) == 999 ? -200 # MAXBASE:LOCAL:(LOCALS:(LOCAL:1))
	LOCAL:3 = CFLAG:LOCAL:(LOCALS:(LOCAL:1)+"ガードキル") && LOCAL:3 < 100 ? 100 # LOCAL:3
	LOCAL:3 = CFLAG:LOCAL:(LOCALS:(LOCAL:1)+"無効化回数") ? 0 # LOCAL:3
	SIF GET_TYPE_NUM(LOCALS:(LOCAL:1)) < 17
		LOCAL:3 = LOCAL:1 == 1 && CFLAG:LOCAL:無効フラグ ? 0 # LOCAL:3
	IF GET_TYPE_NUM(LOCALS:(LOCAL:1)) < 4
		LOCAL:3 = LOCAL:1 == 1 && CFLAG:LOCAL:物理反射フラグ ? -200 # LOCAL:3
	ELSEIF GET_TYPE_NUM(LOCALS:(LOCAL:1)) < 17
		LOCAL:3 = LOCAL:1 == 1 && CFLAG:LOCAL:魔法反射フラグ ? -200 # LOCAL:3
	ENDIF
	IF LOCAL:3 > LOCAL:2
		LOCAL:2 = LOCAL:3
		LOCALS = %LOCALS:(LOCAL:1)%
	ENDIF
NEXT
RETURN GET_TYPE_NUM(LOCALS)

