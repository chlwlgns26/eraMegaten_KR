@SKILL_TRIGGER_ACTIONABLE_XXXX,ARG,ARG:1
#DIM CHASE_T
#DIM CHASE_P
;自分ならNG
SIF ARG == ARG:1
	RETURN 0
;チェイス効果が無いとNG
SIF SKILLGAGE_D_GET(ARG,XXXX) < 1
	RETURN 0
CHASE_T = SKILLGAGE_H_GET(ARG,XXXX) / 10
CHASE_P = SKILLGAGE_H_GET(ARG,XXXX) % 10 + 4
;相手が死んでる、いないと
SIF CHASE_T < 0 || GET_STATE(CFLAG:CHASE_T:ステート) == "DYING"
	RETURN 0
;ダメージを受けてないとNG
SIF CFLAG:CHASE_T:現ダメージ < 1
	RETURN 0
;指定した属性を受けてないとNG
;受けフラグについては、CFLAG.CSV、RECEIVE_SETを参照
SIF !GETBIT(CFLAG:CHASE_T:受けフラグ,CHASE_P)
	RETURN 0
;チェイス相手の位置をターゲットに
RESULT:1 = CPOS(CHASE_T)
RETURN 1

