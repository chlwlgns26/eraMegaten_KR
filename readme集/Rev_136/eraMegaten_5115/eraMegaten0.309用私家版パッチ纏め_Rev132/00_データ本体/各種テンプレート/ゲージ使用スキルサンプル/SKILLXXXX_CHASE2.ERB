		CALL SKILLGAGE_H_SET,ARG,XXXX,SKILLGAGE_H_GET(ARG,XXXX) % 10
		CALL SKILLGAGE_H_ADD,ARG,XXXX,POS(ARG:1) * 10
		;Dに効果ターン数を保存
