	CALL DAMAGE_1,ARG,LOCAL,LOCAL:1,LOCAL:2,LOCAL:3
	PRINTL
ELSE
	;通常時
	LOCAL = BASE:POS(ARG:1):ＨＰ
	CALL ATTACK_SINGLE, ARG, POS(ARG:1),XXXX
	IF SKILLGAGE_D_GET(ARG,XXXX) < 1 && POS(ARG:1) > 0 && LOCAL > BASE:POS(ARG:1):ＨＰ && GET_STATE(CFLAG:POS(ARG:1):ステート) != "DYING"
