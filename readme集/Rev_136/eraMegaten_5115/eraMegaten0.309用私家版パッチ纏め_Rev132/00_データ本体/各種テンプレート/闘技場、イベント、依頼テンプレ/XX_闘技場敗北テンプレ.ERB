;闘技場敗北イベント
;闘技場で敗北した場合にランダムで呼ばれるイベントです
;--------------------------------
;出現条件
;RETURN 1のとき呼び出される可能性があります
;特定条件で呼ばれないようにする場合はRETURN 0を追加してください
;--------------------------------
@CL_LOSE_ABLE_XX
RETURN 1
;---------------------------------
;前置き
;入場者の描写などをしてください
;---------------------------------
@CL_LOSE_START_XX
#LOCALSIZE 2
PRINTFORMW %NAME:MASTER%達は試合に敗れた…
PRINTFORM 対戦相手達が立ち去ると、入れ替わるように
;このへんで犯してくる種族を色々判定
;オトコがいるかどうか
LOCAL:1 = 0
FOR LOCAL,1,7
	SIF POS(LOCAL) < 0
		CONTINUE
	SIF TALENT:POS(LOCAL):オトコ
		LOCAL:1 = 1
NEXT

PRINTFORMW (イベント)

;---------------------------------
;メイン描写
;パーティーメンバーの数だけ呼ばれます
;呼ばれたキャラはTARGETに入っているのでそれで分岐してください
;
;なお、ここで口上がある場合は呼び出しがスキップされます
;---------------------------------
@CL_LOSE_MAIN_XX
;陥落素質のアリナシで判定
IF TALENT:TARGET:恋慕 || TALENT:TARGET:親愛
	;オトコかどうかで分岐
	IF TALENT:TARGET:オトコ && TALENT:TARGET:男の娘 == 0
		PRINTFORMW （イベント）
		PRINTFORMW （イベント）
		PRINTFORMW （イベント）
	ELSEIF TALENT:TARGET:妻
		PRINTFORMW （イベント）
		PRINTFORMW （イベント）
		PRINTFORMW （イベント）
	ELSE
		PRINTFORMW （イベント）
		PRINTFORMW （イベント）
		PRINTFORMW （イベント）
	ENDIF
ELSEIF TALENT:TARGET:淫乱 || TALENT:TARGET:娼婦
	IF TALENT:TARGET:オトコ && TALENT:TARGET:男の娘 == 0
		PRINTFORMW （イベント）
		PRINTFORMW （イベント）
		PRINTFORMW （イベント）
	ELSEIF TALENT:TARGET:淫魔
		PRINTFORMW （イベント）
		PRINTFORMW （イベント）
		PRINTFORMW （イベント）
	ELSE
		PRINTFORMW （イベント）
		PRINTFORMW （イベント）
		PRINTFORMW （イベント）
	ENDIF
ELSEIF TALENT:TARGET:服従 || TALENT:TARGET:隷属
	IF TALENT:TARGET:オトコ
		PRINTFORMW （イベント）
		PRINTFORMW （イベント）
		PRINTFORMW （イベント）
	ELSEIF TALENT:TARGET:玩具
		PRINTFORMW （イベント）
		PRINTFORMW （イベント）
		PRINTFORMW （イベント）
	ELSE
		PRINTFORMW （イベント）
		PRINTFORMW （イベント）
		PRINTFORMW （イベント）
	ENDIF
ELSE
	IF TALENT:TARGET:オトコ && TALENT:TARGET:男の娘 == 0
		PRINTFORMW （イベント）
		PRINTFORMW （イベント）
		PRINTFORMW （イベント）
	ELSEIF TALENT:TARGET:男の娘
		PRINTFORMW （イベント）
		PRINTFORMW （イベント）
		PRINTFORMW （イベント）
	ELSE
		IF TALENT:TARGET:処女
			PRINTFORMW （イベント）
			PRINTFORMW （イベント）
			PRINTFORMW （イベント）
		ELSE
			PRINTFORMW （イベント）
			PRINTFORMW （イベント）
			PRINTFORMW （イベント）
		ENDIF
	ENDIF
ENDIF
;---------------------------------
;終了
;主人公と仲魔達の末路です
;ゲームオーバーにつなげてください
;---------------------------------
@CL_LOSE_END_XX
IF TALENT:MASTER:オトコ && TALENT:MASTER:男の娘 == 0
	PRINTFORMW （イベント）
	PRINTFORMW （イベント）
	PRINTFORMW （イベント）
	PRINTW 　　　　　　　　――  Bad Ending No.YY ( 闘技場敗北END -○○- )
	CALL GLOBAL_BADEND_SET(YY)
ELSE
	PRINTFORMW （イベント）
	PRINTFORMW （イベント）
	PRINTFORMW （イベント）
	IF TALENT:MASTER:男の娘
		PRINTFORMW （イベント）
		PRINTFORMW （イベント）
		PRINTFORMW （イベント）
		PRINTW 　　　　　　　　――  Bad Ending No.YY ( 闘技場敗北END -○○- )
		CALL GLOBAL_BADEND_SET(YY)
	ELSE
		PRINTFORMW （イベント）
		PRINTFORMW （イベント）
		PRINTFORMW （イベント）
		PRINTW 　　　　　　　　――  Bad Ending No.YY ( 闘技場敗北END -○○- )
		CALL GLOBAL_BADEND_SET(YY)
	ENDIF
ENDIF