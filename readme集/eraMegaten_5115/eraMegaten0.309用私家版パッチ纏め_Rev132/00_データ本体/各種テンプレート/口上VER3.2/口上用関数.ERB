;NSTR:(K++) = 

;KCOLOR:K = 


@口上変数表示
SIF !口上有無確認(0,1)
	RETURN 0
FOR LOCAL,0,1000
	SIF !口上有無確認(LOCAL,1)
		BREAK
	SIF KCOLOR:K > -1
		SETCOLOR KCOLOR:K
	IF !(WSTR:LOCAL == "")
		PRINTFORMW %WSTR:LOCAL%
	ELSEIF !(KSTR:LOCAL == "")
		PRINTFORML %KSTR:LOCAL%
	ELSEIF !(NSTR:LOCAL == "")
		PRINTFORM %NSTR:LOCAL%
	ENDIF
NEXT
RESETCOLOR
SIF WSTR:(LOCAL - 2) == ""
	WAIT
RETURN 1

@WSTR書き込み,ARG
IF !(WSTR:ARG == "")
ELSEIF !(KSTR:ARG == "")
	WSTR:ARG = KSTR:ARG
ELSEIF !(NSTR:ARG == "")
	WSTR:ARG = NSTR:ARG
ENDIF








@口上有無確認,ARG,ARG:1 = 0
#FUNCTION
;ARG:1　0だとKを口上のない番号に移動
IF ARG:1 == 0
	FOR LOCAL,0,1000
		SIF !(WSTR:LOCAL == "")
			CONTINUE
		SIF !(KSTR:LOCAL == "")
			CONTINUE
		SIF !(NSTR:LOCAL == "")
			CONTINUE
		K = LOCAL
		BREAK
	NEXT
ENDIF
SIF !(WSTR:ARG == "")
	RETURNF 1
SIF !(KSTR:ARG == "")
	RETURNF 1
SIF !(NSTR:ARG == "")
	RETURNF 1
RETURNF 0
