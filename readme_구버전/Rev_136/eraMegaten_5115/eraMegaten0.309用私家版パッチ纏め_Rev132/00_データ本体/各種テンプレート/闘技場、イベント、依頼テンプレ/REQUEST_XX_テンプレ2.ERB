	PRINTFORMW (イベント)
	PRINTFORMW (イベント)
	PRINTFORMW (イベント)
	依頼フラグ:XX:0 = 1
ELSEIF 依頼フラグ:XX:0 == 1
	PRINTFORMW (イベント)
	PRINTFORMW (イベント)
	PRINTFORMW (イベント)
	依頼フラグ:XX:0 = 2
ELSEIF 依頼フラグ:XX:0 == 2
	PRINTFORMW (イベント)
	PRINTFORMW (イベント)
	PRINTFORMW (イベント)
	依頼フラグ:XX:0 = 3
ENDIF

